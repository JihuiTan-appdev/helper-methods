<h1>
  List of all directors
</h1>


<div>
  <%= link_to "Add a new director", new_director_path%>
</div>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Title
    </th>

    <th>
      Description
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.age %>
    </td>

    <td>
      <%= time_ago_in_words(director.created_at) %> ago
    </td>
    <td>
      <%= time_ago_in_words(director.updated_at) %> ago
    </td>

    <td>
      <%#conventionally, will get movie.class + "_url"%>
      <%= link_to "Show details", director%>
    </td>
  </tr>
  <% end %>
</table>
